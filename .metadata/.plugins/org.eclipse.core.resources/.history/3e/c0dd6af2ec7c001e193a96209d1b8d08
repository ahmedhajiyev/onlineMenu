package com.ahmedhajiyev.menu.webApi.controllers;

import org.springframework.http.HttpStatus;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseStatus;
import org.springframework.web.bind.annotation.RestController;

import com.ahmedhajiyev.menu.business.abstracts.MenuService;
import com.ahmedhajiyev.menu.business.requests.create.CreateMenuRequest;

import lombok.AllArgsConstructor;

@RestController
@RequestMapping("/api/menus")
@AllArgsConstructor
public class MenuController {
	private MenuService menuService;
	
	@PostMapping
	@ResponseStatus(code = HttpStatus.CREATED)
	public void add(CreateMenuRequest createMenuRequest) {
		this.menuService.add(createMenuRequest);
		
	}

}
